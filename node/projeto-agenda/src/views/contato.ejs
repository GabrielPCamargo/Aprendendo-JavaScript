<%- include('includes/head'); %>
<%- include('includes/nav'); %>

<div class="container">
    <div class="row">
        <div class="col-lg-2">

        </div>

        <div class="col-lg-8 my-3">
            <h1 class="text-center">
                Contato
            </h1>
            <p class="text-center lead">Crie ou edite seu contato abaixo</p>

            <%- include('includes/messages'); %>

            <% if(contato._id) { %>
                <form class="form-contato" action="/contato/edit/<%=contato._id %>" method="post">    
            <% } else { %>
                <form class="form-contato" action="/contato/register" method="POST">
            <% } %>
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <div class="mb-3">
                  <label for="Nome" class="form-label">Nome</label>
                  <input type="text " class="form-control" id="exampleInputEmail1" name="nome" value="<%= contato.nome %>">
                </div>
                <div class="mb-3">
                    <label for="sobrenome" class="form-label">Sobronome</label>
                    <input type="text " class="form-control" id="exampleInputEmail1" name="sobrenome" value="<%= contato.sobrenome %>">
                  </div>
                  <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email " class="form-control" id="exampleInputEmail1" name="email" value="<%= contato.email %>">
                  </div>
                  <div class="mb-3">
                    <label for="telefone" class="form-label">Telefone</label>
                    <input type="number " class="form-control" id="exampleInputEmail1" name="telefone" value="<%= contato.telefone %>">
                  </div>
                <button type="submit" class="btn btn-primary">Submit</button>
              </form>



        </div>

        <div class="col-lg-2">

        </div>
    </div>
</div>

<%- include('includes/footer'); %>
